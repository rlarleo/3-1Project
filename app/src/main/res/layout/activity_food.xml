<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cal1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  권장 칼로리 : "
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/rec_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  섭취 칼로리 : "
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/eat_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cal3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  남은 칼로리 : "
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/rest_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView37"
            android:layout_width="match_parent"
            android:layout_height="31dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/banana_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="바나나(93kcal)"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/ck_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="닭가슴살(109kcal)"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/rice_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="쌀밥 (150kcal)"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/s_p_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="고구마(66kcal)"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/s_p_check2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="단호박(51kcal)"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/apple_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사과(52cal)"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etcText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="기타(kcal)"
                    android:inputType="textPersonName" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/add_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="추가" />

            <EditText
                android:id="@+id/delText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="삭제(kcal)"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/del_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="삭제" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>